# Backend Environment Variables

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hospital_management
MONGODB_TEST_URI=mongodb://localhost:27017/hospital_management_test

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_this_in_production
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_change_this_in_production
SESSION_MAX_AGE=86400000

# Email Configuration (Optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=10

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Development Features
DEBUG_MODE=true
ENABLE_CORS=true
TRUST_PROXY=false
